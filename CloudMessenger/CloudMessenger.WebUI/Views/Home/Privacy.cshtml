@{
    ViewData["Title"] = "Privacy Policy";
}

<head>
    <style>
        .serverSidebar {
            background-color: #2F3136;
        }

        .nav-link {
            color: #B8BABD;
        }

            .nav-link:active {
                background-color: #5764F1;
            }

            .nav-link:hover {
                background-color: #2A2C30;
                color: #CED0D4;
            }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<div class="container-fluid">
    <div class="row">
        <div class="col-2 serverSidebar d-flex flex-column flex-shrink-0 p-2 text-white vh-100">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                <span class="fs-4">FIFA BR</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="#" class="nav-link active" aria-current="page">
                        <i class="fas fa-home me-2"></i>#Just talk
                    </a>
                </li>
                <li>
                    <a href="#" class="nav-link">
                        <i class="fas fa-question-circle me-2"></i>#Help
                    </a>
                </li>
                <li>
                    <a href="#" class="nav-link">
                        <i class="fas fa-gavel me-2"></i>#Rules
                    </a>
                </li>
                <li>
                    <a href="#" class="nav-link">
                        <i class="fas fa-calendar-alt me-2"></i>#Events
                    </a>
                </li>
            </ul>
        </div>

        <div class="col-10">
            <div class="container">
                <div class="row p-1">
                    <div class="col-1">User</div>
                    <div class="col-5"><input type="text" id="userInput" /></div>
                </div>
                <div class="row p-1">
                    <div class="col-1">Message</div>
                    <div class="col-5"><input type="text" class="w-100" id="messageInput" /></div>
                </div>
                <div class="row p-1">
                    <div class="col-6 text-end">
                        <input type="button" id="sendButton" value="Send Message" />
                    </div>
                </div>
                <div class="row p-1">
                    <div class="col-6">
                        <hr />
                    </div>
                </div>
                <div class="row p-1">
                    <div class="col-6">
                        <ul id="messagesList"></ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
