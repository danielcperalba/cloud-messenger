@{
    ViewData["Title"] = "Privacy Policy";
}

<head>
    <style>
        body {
            background-color: #36393F;
            color: #DCDDDE;
        }
        .profile-circle {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: #5764F1;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            margin-right: 10px;
        }

        .message-item {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

        .serverSidebar {
            background-color: #2F3136;
            width: 15rem;
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            z-index: 1000;
            padding-top: 1rem;
            margin-left: 4.5rem;
        }

        .usersSidebar {
            background-color: #2F3136;
            width: 15rem;
            position: fixed;
            top: 0;
            bottom: 0;
            right: 0;
            z-index: 1000;
            padding-top: 1rem;
            color: #B8BABD;
        }

        .nav-link {
            color: #B8BABD;
            padding: 0.5rem 1rem;
            border-radius: 0.25rem;
        }

            .nav-link.active {
                background-color: #393C43;
                color: #F7F7F7;
            }

            .nav-link:hover {
                background-color: #2A2C30;
                color: #CED0D4;
            }
        .content {
            margin-left: 8rem;
            margin-right: 15rem;
            padding: 1rem;
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            height: 100vh;
        }
        .input-group {
            background-color: #363940;
            width: 10rem;
            position: fixed;
            z-index: 1000;
            padding-top: 1rem;
            padding-bottom: 1rem;
            bottom: 0;
            margin-right: 15rem;
        }
        #messagesList {
            flex-grow: 1;
            overflow-y: auto;
            margin-bottom: 1rem;
        }
            #messagesList hr {
                border-color: #747982;
            }
        .msgInput {
            background-color: #2A2B2F;
            border-color: #26292E;
        }
        .btn {
            background-color: #1B6EC2;
            color: #FFF;
        }
        .badge {
            height: 18px;
            width: 18px;
            border: 3px solid; /* Adiciona uma borda preta de 2px */
            border-color: #2F3136;
        }

    </style>
</head>

<div class="container-fluid">
    <div class="row">

        <!-- Server Channels -->
        <div class="col-2 serverSidebar py-5 d-flex flex-column flex-shrink-0 p-2 text-white vh-100">

            <div class="">
                <svg class="bd-placeholder-img card-img-top mt-4" width="100%" height="120" xmlns="" role="img" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect></svg>
                <h6 class="fw-light text-light mt-3 mb-3">Tech BR</h6>
            </div>

            <div class="border-top border-secondary mb-3"></div>

            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="#" class="nav-link bg-dark" aria-current="page">
                        # Just talk
                    </a>
                </li>
                <li>
                    <a href="#" class="nav-link">
                        # Help
                        <span class="position-absolute top-0 start-100 translate-middle p-1 mt-1 ml-1 bg-danger rounded-circle">
                        </span>
                    </a>
                </li>
                <li>
                    <a href="#" class="nav-link">
                        # Rules
                        <span class="position-absolute top-0 start-100 translate-middle p-1 mt-1 ml-1 bg-danger rounded-circle">
                        </span>
                    </a>
                </li>
                <li>
                    <a href="#" class="nav-link">
                        # Events
                        <span class="position-absolute top-0 start-100 translate-middle p-1 mt-1 ml-1 bg-danger rounded-circle">
                        </span>
                    </a>
                </li>
            </ul>
        </div>

        <!-- Server Content -->
        <div class="col-10 content">
            <div class="container">
                <div class="row p-1">
                    <div class="col-5"><input type="text" id="userInput" class="form-control msgInput invisible" /></div>
                </div>

                <div class="row mb-4">
                    <div class="col-12 text-light">
                        <div id="messagesList">
                        </div>
                    </div>
                </div>

                <div class="input-group mw-100 border-top">
                    <input type="text" id="messageInput" class="form-control msgInput mw-100" placeholder="Type the message here..." aria-label="Recipient's username" aria-describedby="basic-addon2">
                    <div class="input-group-append">
                        <button class="btn" id="sendButton" type="button">Send</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Server Users -->
        <div class="col-2 usersSidebar py-5 d-flex flex-column flex-shrink-0 p-2 text-white vh-100">

            <h6 class="fw-light text-light mt-4 mb-3">Users</h6>

            <div class="border-top border-secondary mb-3"></div>

            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item border-bottom border-dark">
                    <span class="navbar-text d-flex justify-content-start align-items-center">
                        <div class="dropdown text-end">
                            <span class="badge position-absolute  mt-4 ml-4 translate-middle bg-success rounded-circle">
                            </span>
                            <img src="https://github.com/danielcperalba.png" alt="mdo" width="38" height="38" class="rounded-circle">
                        </div>
                        <span class="ml-2">Daniel Peralba</span>
                        <span class="ml-2">#3346</span>

                    </span>
                </li>
            </ul>
        </div>
    </div>
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
