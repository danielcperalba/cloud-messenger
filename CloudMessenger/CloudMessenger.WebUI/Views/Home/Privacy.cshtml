@{
    ViewData["Title"] = "Privacy Policy";
}

<head>
    <style>
        body {
            background-color: #36393F;
            color: #DCDDDE;
            font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
        }
        .profile-circle {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: #5764F1;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            margin-right: 10px;
        }

        .message-item {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

        .serverSidebar {
            background-color: #2F3136;
            width: 15rem;
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            z-index: 1000;
            padding-top: 1rem;
            margin-left: 4.5rem;
        }

        .nav-link {
            color: #B8BABD;
            padding: 0.5rem 1rem;
            border-radius: 0.25rem;
        }

            .nav-link.active {
                background-color: #2F3136;
                color: #FFF;
            }

            .nav-link:hover {
                background-color: #2A2C30;
                color: #CED0D4;
            }
        .content {
            margin-left: 8rem;
            padding: 1rem;
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            height: 100vh;
        }
        .input-group {
            margin-top: auto;
        }

        #messagesList {
            flex-grow: 1;
            overflow-y: auto;
            margin-bottom: 1rem;
        }

            #messagesList hr {
                border-color: #747982;
            }
    </style>
</head>

<div class="container-fluid">
    <div class="row">
        <div class="col-2 serverSidebar d-flex flex-column flex-shrink-0 p-2 text-white vh-100">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                <span class="fs-4">FIFA BR</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="#" class="nav-link active" aria-current="page">
                        # Just talk
                    </a>
                </li>
                <li>
                    <a href="#" class="nav-link">
                        # Help
                    </a>
                </li>
                <li>
                    <a href="#" class="nav-link">
                        # Rules
                    </a>
                </li>
                <li>
                    <a href="#" class="nav-link">
                        # Events
                    </a>
                </li>
            </ul>
        </div>

        <div class="col-10 content">
            <div class="container">
                <div class="row p-1">
                    <div class="col-1 text-light">User</div>
                    <div class="col-5"><input type="text" id="userInput" class="form-control msgInput" /></div>
                </div>

                <div class="row mb-4">
                    <div class="col-12 text-light">
                        <div id="messagesList">
                            <div class="col-12">
                                <hr />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="input-group mb-3">
                    <input type="text" id="messageInput" class="form-control msgInput" placeholder="Type the message here..." aria-label="Recipient's username" aria-describedby="basic-addon2">
                    <div class="input-group-append">
                        <button class="btn btn-success" id="sendButton" type="button">Send</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
