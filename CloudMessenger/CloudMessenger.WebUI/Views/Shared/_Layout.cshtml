<!DOCTYPE html>
<html lang="en" class="bg-dark-subtle">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CloudMessenger.WebUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            display: flex;
            margin: 0;
            background-color: #35383E;
        }
        .sidebar {
            width: 4.5rem;
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            background-color: #202125;
            z-index: 1000;
        }
        .content {
            flex-grow: 1
        }
        .circle-link {
            display: inline-block;
            width: 50px;
            height: 50px;
            border-radius: 100%;
            justify-content: center;
            align-items: center;
            background-color: #35393E;
            color: white;
            text-decoration: none;
            margin: 5px;
        }
            .circle-link:hover {
                background-color: #2F3136;
            }


    </style>
</head>
<body>
    <div class="sidebar d-flex flex-column">
        <a href="/" class="d-block p-3 link-body-emphasis text-decoration-none" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="Icon-only">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Cloud</a>
        </a>
        <ul class="nav nav-pills nav-flush flex-column mb-auto text-center">
            <li class="nav-item">
                <a class="nav-link text-light circle-link" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-home"></i>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light circle-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                    <i class="fas fa-user-friends"></i>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light circle-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                    <i class="fas fa-cog"></i>
                </a>
            </li>
        </ul>



        @*<div class="dropdown border-top">
            <a href="#" class="d-flex align-items-center justify-content-center p-3 link-body-emphasis text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                <img src="https://github.com/danielcperalba.png" alt="mdo" width="24" height="24" class="rounded-circle">
            </a>
            <ul class="dropdown-menu text-small shadow">
                <li><a class="dropdown-item" href="#">Profile</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="#">Sign out</a></li>
            </ul>
        </div>*@
    </div>
    <div class="content">
        <div class="container-fluid">
            <main role="main" class="pb-3 ">
                @RenderBody()
            </main>
        </div>
    </div>
    @*<footer class="border-top footer text-muted">
        <div class="container">
            © 2024 - CloudMessenger.WebUI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>*@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
